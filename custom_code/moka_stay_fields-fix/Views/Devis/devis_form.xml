<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_devis_form_inherit" model="ir.ui.view">
    <field name="name">view.sale.order.form.inherit</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="/form/sheet/group/group[2]" position="after">
        <!-- Groups with the new fields -->
        <group>
          <field name="moka_is_sejour_devis"
                 attrs="{
                 'readonly': [('state', '!=', 'draft')]
                 }"/>
          <field name="moka_sejour_titre_devis"
                 attrs="{
                 'invisible': [('moka_is_sejour_devis', '=', False)],
                 'readonly': [('state', '!=', 'draft')]
                 }"/>
          <field name="moka_nombre_personnes_devis"
                  attrs="{
                  'invisible': [('moka_is_sejour_devis', '=', False)],
                  'readonly': [('state', '!=', 'draft')]
                  }"/>
        </group>
        <group attrs="{
                    'invisible': [('moka_is_sejour_devis', '=', False)],
                    }">
          <field name="moka_is_full_day_devis"/>
          <field name="moka_sejour_debut_devis"
                 attrs="{
                 'readonly': [('state', '!=', 'draft')]
                 }"/>
          <field name="moka_heure_debut_devis" widget="float_time"
                 attrs="{
                 'readonly': [('state', '!=', 'draft')],
                 'invisible': [('moka_is_full_day_devis', '=', True)],
                 'required': [('moka_is_full_day_devis', '=', False)]
                 }"/>
          <hr size="5"></hr>
          <field name="moka_sejour_fin_devis"
                 attrs="{
                 'readonly': [('state', '!=', 'draft')]
                 }"/>
          <field name="moka_heure_fin_devis" widget="float_time"
                 attrs="{
                 'readonly': [('state', '!=', 'draft')],
                 'invisible': [('moka_is_full_day_devis', '=', True)],
                 'required': [('moka_is_full_day_devis', '=', False)]
                 }"/>
        </group>
      </xpath>

      <!-- Add the price / person and price / person HT at the bottom of the page -->
      <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="replace">
        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
          <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
          <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
          <field  name="moka_prix_pp_ht_devis" widget="monetary" options="{'currency_field': 'currency_id'}"
                  attrs="{
                  'invisible': ['|', ('moka_nombre_personnes_devis', '=', 0), ('moka_is_sejour_devis', '=', False)]}"/>
          <div class="oe_subtotal_footer_separator oe_inline o_td_label">
            <label for="amount_total"/>
          </div>
          <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
          <field t-if="moka_nombre_personnes >= 1" name="moka_prix_pp_devis" widget="monetary" options="{'currency_field': 'currency_id'}"
                 attrs="{
                 'invisible': ['|', ('moka_nombre_personnes_devis', '=', 0), ('moka_is_sejour_devis', '=', False)]}"/>
        </group>
      </xpath>
    </field>
  </record>

</odoo>
