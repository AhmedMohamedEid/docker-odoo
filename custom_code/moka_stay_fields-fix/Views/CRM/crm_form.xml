<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_crm_form_inherit" model="ir.ui.view">
    <field name="name">view.crm.form.inherit</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
    <field name="arch" type="xml">
      <!-- Add a button to display the event during the benefit -->
      <xpath expr="/form/sheet/div[1]/button" position="after">
          <button class="oe_stat_button" type="object" name="redirect_calendar" icon="fa-suitcase"
                  attrs="{'invisible': [('moka_is_sejour', '=', False)],
                          'invisible': [('moka_number_event', '&lt;', 2)]}">
            <div class="o_stat_info">
              <field name="moka_number_event" class="o_stat_value"/>
              <span class="o_stat_text">Simultaneous</span>
            </div>
          </button>
      </xpath>

      <xpath expr="/form/sheet/group/group[4]" position="after">
        <group>
          <field name="moka_is_sejour"/>
          <field name="moka_sejour_titre"
                 attrs="{
                 'invisible': [('moka_is_sejour', '=', False)]
                 }"/>
          <field name="moka_nombre_personnes"
                  attrs="{
                  'invisible': [('moka_is_sejour', '=', False)]
                  }"/>
        </group>
        <group attrs="{
                    'invisible': [('moka_is_sejour', '=', False)]
                    }">
          <field name="moka_is_full_day"/>
          <field name="moka_sejour_debut"/>
          <field name="moka_heure_debut" widget="float_time"
                 attrs="{
                 'invisible': [('moka_is_full_day', '=', True)],
                 'required': [('moka_is_full_day', '=', False)]
                 }"/>
          <field name="moka_sejour_fin"/>
          <field name="moka_heure_fin" widget="float_time"
                 attrs="{
                 'invisible': [('moka_is_full_day', '=', True)],
                 'required': [('moka_is_full_day', '=', False)]
                 }"/>
        </group>
      </xpath>
    </field>
  </record>

</odoo>
