<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_crm_calendar_form_inherit" model="ir.ui.view">
    <field name="name">view.crm.calendar.form.inherit</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
    <field name="arch" type="xml">
      <!-- Add the fields into the form -->
      <xpath expr="/form/sheet/group/group[4]" position="after">
        <group>
          <field name="moka_is_sejour"/>
          <field name="moka_sejour_titre"
                 attrs="{
                 'invisible': [('moka_is_sejour', '=', False)]
                 }"/>
          <field name="moka_nombre_personnes"
                  attrs="{
                  'invisible': [('moka_is_sejour', '=', False)]
                  }"/>
        </group>
        <group attrs="{
                    'invisible': [('moka_is_sejour', '=', False)]
                    }">
          <field name="moka_is_full_day"/>
          <field name="moka_sejour_debut"/>
          <field name="moka_heure_debut" widget="float_time"
                 attrs="{
                 'invisible': [('moka_is_full_day', '=', True)],
                 'required': [('moka_is_full_day', '=', False)]
                 }"/>
          <hr size="5"></hr>
          <field name="moka_sejour_fin"/>
          <field name="moka_heure_fin" widget="float_time"
                 attrs="{
                 'invisible': [('moka_is_full_day', '=', True)],
                 'required': [('moka_is_full_day', '=', False)]
                 }"/>
        </group>
      </xpath>
    </field>
  </record>

</odoo>
