<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="views_invoice_form_inherit" model="ir.ui.view">
    <field name="name">view.invoice.form.inherit</field>
    <field name="model">account.invoice</field>
    <field name="inherit_id" ref="account.invoice_form"/>
    <field name="arch" type="xml">

      <!-- Add the fields of the benefit in the form -->
      <xpath expr="/form/sheet/group/group[last()]" position="after">
        <!-- Groups with the new fields -->
        <group>
          <field name="moka_is_sejour_invoice" invisible="1"/>
          <field name="moka_sejour_titre_invoice" readonly="True"
                 attrs="{
                 'invisible': [('moka_is_sejour_invoice', '=', False)]
                 }"/>
          <field name="moka_nombre_personnes_invoice" readonly="True"
                 attrs="{
                 'invisible': [('moka_is_sejour_invoice', '=', False)],
                 }"/>
        </group>
        <group attrs="{
                    'invisible': [('moka_is_sejour_invoice', '=', False)],
                    }">
          <field name="moka_sejour_debut_invoice" readonly="True"/>
          <field name="moka_heure_debut_invoice" widget="float_time" readonly="True"/>
          <hr size="5"></hr>
          <field name="moka_sejour_fin_invoice" readonly="True"/>
          <field name="moka_heure_fin_invoice" widget="float_time" readonly="True"/>
        </group>
      </xpath>

      <!-- Add the price / person and price / person HT at the bottom of the page -->
      <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="replace">
        <group class="oe_subtotal_footer oe_right">
          <field name="amount_untaxed"/>
          <field name="amount_tax"/>
          <field name="moka_prix_pp_ht_invoice" widget="monetary"
                 attrs="{
                 'invisible': [('moka_is_sejour_invoice', '=', False)],
                 'invisible': [('moka_nombre_personnes_invoice', '=', 0)]
                 }"/>
          <field name="amount_total" class="oe_subtotal_footer_separator"/>
          <field name="moka_prix_pp_invoice" widget="monetary"
                 attrs="{
                 'invisible': [('moka_is_sejour_invoice', '=', False)],
                 'invisible': [('moka_nombre_personnes_invoice', '=', 0)]
                 }"/>
          <field name="payments_widget" colspan="2" nolabel="1" widget="payment"/>
          <field name="residual" class="oe_subtotal_footer_separator" attrs="{'invisible': [('state', '=', 'draft')]}"/>
          <field name="reconciled" invisible="1"/>
          <field name="outstanding_credits_debits_widget" colspan="2" nolabel="1" widget="payment" attrs="{'invisible': [('state', 'not in', 'open')]}"/>
        </group>
      </xpath>

    </field>
  </record>

</odoo>
