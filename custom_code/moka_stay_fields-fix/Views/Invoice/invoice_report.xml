<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <template id="report_invoice_pdf" inherit_id="account.report_invoice_document">
    <xpath expr="//div[@id='informations']" position="after">
      <h3 t-field="o.moka_sejour_titre_invoice"/>

      <div class="mb32 bg-100" style="border: 1px solid #e4e4e4;">
        <div class="row">
          <div t-if="o.moka_is_sejour_invoice" t-att-class="'col-4 mt-1' if o.moka_nombre_personnes_invoice != 0 else 'col-6 mt-1'" style="text-align:center;">
            <t t-set="hour_d" t-value="env['account.invoice']._get_hour_start(o.name)"/>
            <strong>Benefit start:</strong>
            <p>
              <span t-field="o.moka_sejour_debut_invoice"/>
              <t t-if="hour_d != '0:00'" t-esc="hour_d"/>
            </p>
          </div>
          <div t-if="o.moka_is_sejour_invoice" t-att-class="'col-4 mt-1' if o.moka_nombre_personnes_invoice != 0 else 'col-6 mt-1'" style="text-align:center;">
            <t t-set="hour_f" t-value="env['account.invoice']._get_hour_end(o.name)"/>
            <strong>Benefit end:</strong>
            <p>
              <span t-field="o.moka_sejour_fin_invoice"/>
              <t t-if="hour_f != '0:00'" t-esc="hour_f"/>
            </p>
          </div>
          <div t-if="o.moka_is_sejour_invoice and o.moka_nombre_personnes_invoice != 0" t-att-class="'col-4 mt-1' if o.moka_nombre_personnes_invoice != 0 else 'col-6 mt-1'" style="text-align:center;">
            <strong>Person(s):</strong>
            <p t-field="o.moka_nombre_personnes_invoice"/>
          </div>
        </div>
      </div>
    </xpath>

    <!-- Add the line Price / Person HT at the resume part-->
    <xpath expr="//table[@class='table table-sm']/tr[1]" position="after">
      <tr t-if="o.moka_is_sejour_invoice and o.moka_nombre_personnes_invoice != 0" class="border-black o_subtotal" style="">
        <td>Price / Person HT</td>
        <td class="text-right">
          <span t-field="o.moka_prix_pp_ht_invoice"/>
        </td>
      </tr>
    </xpath>

    <!-- Add the line Price / Person at the resume part-->
    <xpath expr="//table[@class='table table-sm']/tr[3]" position="after">
      <tr t-if="o.moka_is_sejour_invoice and o.moka_nombre_personnes_invoice != 0" class="border-black o_subtotal" style="">
        <td>Price / Person</td>
        <td class="text-right">
          <span t-field="o.moka_prix_pp_invoice"/>
        </td>
      </tr>
    </xpath>
  </template>

</odoo>
